#include "imu.h"

BSP_IMU_INIT(){
	uint8_t id = 0;

	BSP_I2C1_Read(BNO055_ADDRESS_A, BNO055_CALIB_STAT_ADDR, &id,1);

	if (id != BNO055_ID)
	{
		my_printf("Can't find BNO055, id: 0x%02x. Please check your wiring.\r\n");
	}


}

void bno055_setPage(uint8_t page) {
	BSP_I2C1_Write(BNO055_ADDRESS_A, BNO055_PAGE_ID, &page,1);
}
